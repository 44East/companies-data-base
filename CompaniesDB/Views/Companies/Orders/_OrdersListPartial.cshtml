@{
}
@model IList<Order>

<h2>Orders</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Store City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.StoreCity</td>
            </tr>
        }
    </tbody>
</table>