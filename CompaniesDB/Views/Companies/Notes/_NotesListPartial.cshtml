@{
}
@model IList<Note>
<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .header-container h2 {
            margin: 0;
        }

    .create-note-container {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }
</style>
<form asp-action="DeleteNote" method="post">
    <div>
        
        <div class="header-container">
            <h2>Notes</h2>            
            <div class="create-note-container">
                <a href="#" id="createNoteLink">Create New Note</a>
                <button type="submit" class="btn btn-danger">Delete Selected</button>
            </div>
        </div>


    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Invoice Number</th>
                <th>Employee</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model)
            {
                <tr>
                    <td>@note.InvoiceNumber</td>
                    <td>@note.Employee.FirstName @note.Employee.LastName</td>
                    <td>
                        <input type="checkbox" name="selectedItems" value="@note.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>