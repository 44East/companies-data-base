@{
}
@model IList<Note>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

            .header-container h2 {
                margin: 2px;
            }

        .create-note-container {
            display: flex;
            align-items: center;
        }

        .create-note-btn {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <form asp-action="DeleteNote" method="post">
        <div>

            <div class="header-container">
                <h2>Notes</h2>
                <div class="create-note-container">
                    <button id="createNoteLink" class="btn btn-success mx-1"><i class="fas fa-plus"></i> </button>
                    <button type="submit" class="btn btn-danger mx-1"><i class="fas fa-trash-alt"></i></button>
                </div>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Invoice Number</th>
                    <th>Employee</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var note in Model)
                {
                    <tr>
                        <td>@note.InvoiceNumber</td>
                        <td>@note.Employee.FirstName @note.Employee.LastName</td>
                        <td>
                            <input type="checkbox" name="selectedItems" value="@note.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</body>
</html>