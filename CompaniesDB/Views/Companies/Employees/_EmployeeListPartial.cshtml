@model IList<Employee>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a href="#" class="employee-link" data-employee-id="@employee.Id">@employee.FirstName</a>
                    </td>
                    <td>@employee.LastName</td>
                </tr>
            }
        </tbody>
    </table>
